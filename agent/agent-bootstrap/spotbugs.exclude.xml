<?xml version="1.0" encoding="UTF-8" ?>
<FindBugsFilter
    xmlns="https://github.com/spotbugs/filter/3.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://github.com/spotbugs/filter/3.0.0 https://raw.githubusercontent.com/spotbugs/spotbugs/3.1.0/spotbugs/etc/findbugsfilter.xsd https://github.com/spotbugs/filter/3.0.0 ">
    <Match>
        <!-- this is a fire and forget thread. we don't need to hold onto the Future return value -->
        <Bug pattern="RV_RETURN_VALUE_IGNORED_BAD_PRACTICE" />
        <Class name="com.microsoft.applicationinsights.agent.internal.diagnostics.status.StatusFile" />
        <Method name="write" />
    </Match>
    <Match>
        <Bug pattern="PATH_TRAVERSAL_IN" />
        <Or>
            <And>
                <!-- False Positive. Path is not from an external source. -->
                <Class name="com.microsoft.applicationinsights.agent.internal.diagnostics.status.StatusFile$2" />
                <Method name="run" />
            </And>
            <And>
                <!-- False Positive. Path is not from an external source. -->
                <Class name="com.microsoft.applicationinsights.agent.internal.bootstrap.MainEntryPoint" />
                <Method name="start"/>
            </And>
        </Or>
    </Match>
    <Match>
        <!-- The exception in question comes from Class.forName. It may throw with different versions of java. -->
        <Bug pattern="REC_CATCH_EXCEPTION" />
        <Class name="com.microsoft.applicationinsights.agent.internal.diagnostics.PidFinder" />
        <Method name="getPidUsingProcessHandle" />
    </Match>
</FindBugsFilter>
